# vim: ft=gitconfig
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	hist = log --graph --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s %Cgreen[%an] %C(auto)%d%Creset' --date=short
	amend = commit --all --amend
	alias = !git config --global --list | grep ^alias
[rebase]
	autoSquash = true
[push]
	default = simple
[core]
	autocrlf = input
[grep]
	lineNumber = true
	patternType = perl
[merge]
	conflictStyle = diff3
[include]
	path = ~/.gitconfig_local
