# vim: ft=gitconfig
[alias]
	alias = !git config --global --list | grep ^alias
	amend = commit --all --amend
	br = branch
	ci = commit
	co = checkout
	ctags = !.git/hooks/ctags
	hist = log --graph --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s %Cgreen[%an] %C(auto)%d%Creset' --date=short
	st = status
[rebase]
	autoSquash = true
[push]
	default = simple
[core]
	autocrlf = input
[grep]
	lineNumber = true
	patternType = perl
[merge]
	conflictStyle = diff3
[init]
	templatedir = ~/.dotfiles/git_template
[include]
	path = ~/.gitconfig_local
